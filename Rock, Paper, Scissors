import random

def play() :
    game = raw_input("rock, paper, or scissors? ")
    dice = random.randint(0,2)
    
    
def convert_to_string(play_str) :
    if play_str == 0:
        return "rock"
    elif play_str == 1:
        return "paper"
    elif play_str == 2:
        return "scissors"

def convert_to_int(number) :
    if number == "rock":
        return 0
    elif number == "paper":
        return 1
    elif number == "scissors":
        return 2

def determine_winner(player1, player2, tie) :
    player1 == "you win! "
    player2 == "you lose! "
    tie == "try again! "

def main() :
    play()

main()
